@model KoruCosmetica.Models.Clientes

@{
    ViewData["Title"] = "Registrar";
}

<body>


    <div id="form">
        <h1 class="text-center my-4">Registrarse</h1>

        <h4 class="text-center">Rellene el siguiente formulario</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Registrar">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">
                            @Html.Raw(ViewBag.ErrorMessage)
                        </div>
                    }

                    <div class="mb-3">
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input asp-for="Mail" class="form-control" placeholder="Mail" />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input asp-for="Contraseña" class="form-control" placeholder="Contraseña" type="password" />
                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Registrarse" class="btn btn-primary btn-block" />
                    </div>
                    <div class="text-center mt-3">
                        <p>¿Ya tiene una cuenta? <a href="@Url.Action("Login", "Clientes")">Ingrese aquí</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
