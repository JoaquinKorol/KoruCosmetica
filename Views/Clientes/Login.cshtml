@model KoruCosmetica.Models.Clientes

@{
    ViewData["Title"] = "Ingresar";
}

<body>
    <div id="form">
    <h1 class="text-center my-4">Ingresar</h1>
    <h4 class="text-center">Rellene el siguiente formulario</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <input asp-for="Mail" class="form-control" placeholder="Mail" required />
                </div>

                <div class="mb-3">
                    <input asp-for="Contraseña" class="form-control" placeholder="Contraseña" type="password" required />
                </div>

                <div class="text-center">
                    <input type="submit" value="Acceder" class="btn btn-primary btn-block" />
                    
                </div>
                <div class="text-center mt-3">
                    <p>¿No tiene una cuenta? <a href="@Url.Action("Registrar", "Clientes")">Regístrese aquí</a></p>
                        <p><a href="@Url.Action("RecuperarContraseña", "Clientes")">¿Olvidó su contraseña? Recupérela aquí</a></p>
                </div>
            </form>
        </div>
    </div>
        
    
</body>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
